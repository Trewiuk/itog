<Page x:Class="itog.HelloPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:itog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelloPage">

    <Grid Background="White">
        <Image Margin="-118,-156,-122,-230" Source="pngwing.com (1).png" Stretch="Fill"/>
        <Button  Content="Расписание" Margin="314,100,0,0" Click="Button_Click_Record" HorizontalAlignment="Left" Width="170" Height="48" VerticalAlignment="Top" BorderBrush="{x:Null}"/>
        <Button  Content="Список детей" Margin="314,240,0,0" Click="Button_Click_Kid" HorizontalAlignment="Left" Width="170" Height="48" VerticalAlignment="Top" BorderBrush="{x:Null}"/>
        <Button Background="LightCoral" Foreground="#F0F0F0" Content="Выйти" HorizontalAlignment="Left" Margin="700,10,0,0" VerticalAlignment="Top" Width="75" BorderBrush="{x:Null}" Click="Button_Click_Back"/>
        <Button  Content="Список сотрудников" Margin="314,170,0,0" Click="Button_Click_User" HorizontalAlignment="Left" Width="170" Height="48" VerticalAlignment="Top" BorderBrush="{x:Null}"/>
        

    </Grid>
</Page>
