<Page x:Class="itog.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:itog"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="LoginPage">

    <Grid Background="White">
        <Image Margin="-20,-76,-20,-159" Source="pngwing.com (1).png" Stretch="Fill"/>
        <TextBox  Background="White" Name="loginText" Height="26" Margin="240,156,240,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" />
        <TextBox  Background="White" Name="passwordText" Height="26" Margin="240,201,240,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top"/>
        <Button   Foreground="White"  Content="Войти" Margin="240,262,240,0" VerticalAlignment="Top" Height="26" Click="Button_Click" BorderBrush="{x:Null}"/>
        <Label Foreground="Black" Content="АВТОРИЗАЦИЯ" HorizontalAlignment="Center" Margin="240,104,240,0" VerticalAlignment="Top" FontSize="16" FontFamily="TT Travels Medium"/>
        



    </Grid>
</Page>
